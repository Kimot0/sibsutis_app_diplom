<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.diplom.ui.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_navigation_login_to_navigation_news"
            app:destination="@id/navigation_news"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.diplom.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/news_fragment">
        <action
            android:id="@+id/action_navigation_news_to_detailed_news"
            app:destination="@id/detailed_news" />
    </fragment>

    <fragment
        android:id="@+id/detailed_news"
        android:name="com.example.diplom.ui.news.detailednews.DetailedNewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/detailed_news_fragment" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.diplom.ui.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/schedule_fragment">
        <action
            android:id="@+id/action_schedule_to_search_schedule"
            app:destination="@id/schedule_search" />
    </fragment>

    <fragment
        android:id="@+id/navigation_attendance"
        android:name="com.example.diplom.ui.attendance.AttendanceFragment"
        android:label="@string/title_attendance"
        tools:layout="@layout/attendance_fragment" />

    <fragment
        android:id="@+id/navigation_attendance_teacher"
        android:name="com.example.diplom.ui.attendanceTeacher.AttendanceTeacherFragment"
        android:label="@string/title_attendance"
        tools:layout="@layout/teacher_attendance_fragment">
        <action
            android:id="@+id/action_navigation_attendance_to_detailed_attendance"
            app:destination="@id/navigation_detailed_attendance_teacher" />


    </fragment>

    <fragment
        android:id="@+id/navigation_detailed_attendance_teacher"
        android:name="com.example.diplom.ui.attendanceTeacher.detailedteacherattendance.DetailedTeacherAttendanceFragment"
        android:label="@string/title_attendance"
        tools:layout="@layout/detailed_teacher_attendance_fragment"/>

    <fragment
        android:id="@+id/schedule_search"
        android:name="com.example.diplom.ui.schedule.scheduleSearch.ScheduleSearchFragment"
        tools:layout="@layout/schedule_search_fragment">
        <action
            android:id="@+id/action_navigation_schedule_search_to_schedule"
            app:destination="@id/navigation_schedule" />
    </fragment>

</navigation>